<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/contact_avatar"
        android:layout_width="0dp"
        android:layout_weight="@integer/contact_list_image_weight"
        android:layout_height="@dimen/contact_list_image_height"
        />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="0dp"
        android:layout_weight="@integer/contact_list_text_weight"
        android:gravity="center"
        android:textSize="@dimen/contact_list_text_size"
        android:layout_height="match_parent"
        />

</LinearLayout>