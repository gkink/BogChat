<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/messages_margin"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_contact_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_outline_black_36dp"
        />

    <TextView
        android:id="@+id/received_message"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginStart="5dp"
        android:layout_gravity="start"
        android:maxWidth="@dimen/received_message_max_width"
        android:background="@drawable/received_message"
        />

</LinearLayout>