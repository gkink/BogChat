<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/conversation_contact_avatar"
        android:layout_width="0dp"
        android:layout_weight="@integer/contact_list_image_weight"
        android:layout_height="@dimen/contact_list_image_height"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="@integer/contact_list_text_weight"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/conversation_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/contact_list_text_size"
            />

        <TextView
            android:id="@+id/conversation_contact_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/contact_list_text_size"
            android:textColor="@color/secondary_text"
            android:lines="2"
            android:ellipsize="end"
            />
    </LinearLayout>

</LinearLayout>